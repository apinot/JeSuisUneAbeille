{% extends "template.html.twig" %}

{% block content %}
<div class="d-flex justify-content-between align-items-center pt-4 pb-5">
    <h1>Liste des plantes</h1>
    <div>
        <a class="btn btn-primary" role="button" href="{{ path_for('formAjoutPlante', { 'id': plante.id }) }}"><i class="fas fa-plus"></i> Ajouter</a>                
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th scope="col">#ID</th>
            <th scope="col">Nom</th>
            <th scope="col">Nom latin</th>
            <th scope="col">Taille</th>
            <th scope="col">Floraison</th>
            <th scope="col">Couleur</th>
            <th scope="col">Emplacement</th>
            <th scope="col">Nectar</th>
            <th scope="col">Pollen</th>
            <th scope="col">Miellat</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for plante in plantes %}
        <tr>
            <th scope="row">{{plante.id}}</th>
            <td>{{plante.nom}}</td>
            <td>{{plante.nom_latin}}</td>
            <td>{{plante.taille}}</td>
            <td>{{plante.floraison}}</td>
            <td>{{plante.couleur}}</td>
            <td>{{plante.emplacement}}</td>
            <td>{{plante.nectar}}</td>
            <td>{{plante.pollen}}</td>
            <td>{% if plante.miellat %} M {% endif %}</td>
            <td>
                <div class="row">
                    <a class="btn btn-primary col-5" role="button" href="{{ path_for('formEditPlante', { 'id': plante.id }) }}"><i class="fas fa-edit"></i></a>                
                    <form class="col-5" method="POST" action="{{ path_for('supprimerPlante', { 'id': plante.id }) }}">
                        <input type="hidden" name="_METHOD" value="DELETE"/>
                        <button type="submit" class="btn btn-danger" value="Supprimer"><i class="fas fa-trash-alt"></i></button>
                    </form>
                </div>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}