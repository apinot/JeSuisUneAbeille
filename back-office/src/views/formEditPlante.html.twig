{% extends "template.html.twig" %}

{% block content %}
<form action="{{ path_for('modifierPlante', { 'id': plante.id }) }}" method="POST" enctype="multipart/form-data">
    <input type="hidden" name="_METHOD" value="PUT"/>
    <div class="form-group">
        <label for="nom">Nom :</label>
        <input type="text" class="form-control" name="nom" id="nom" value="{{plante.nom}}">
    </div>
    <div class="form-group">
        <label for="nom_latin">Nom latin :</label>
        <input type="text" class="form-control" name="nom_latin" id="nom_latin" value="{{plante.nom_latin}}">
    </div>
    <div class="form-group">
        <label for="taille">Taille :</label>
        <input type="text" class="form-control" name="taille" id="taille" value="{{plante.taille}}">
    </div>
    <div class="form-group">
        <label for="floraison">PÃ©riode de Floraison :</label>
        <input type="text" class="form-control" name="floraison" id="floraison" value="{{plante.floraison}}">
    </div>
    <div class="form-group">
        <label for="couleur">Couleur de Floraison :</label>
        <input type="text" class="form-control" name="couleur" id="couleur" value="{{plante.couleur}}">
    </div>
    <div class="form-group">
        <label for="emplacement">Emplacement dans le jardin botanique :</label>
        <input type="text" class="form-control" name="emplacement" id="emplacement" value="{{plante.emplacement}}">
    </div>
    <div class="form-group">
        <label for="nectar">Point de Nectar :</label>
        <input type="number" class="form-control" name="nectar" id="nectar" value="{{plante.nectar}}">
    </div>
    <div class="form-group">
        <label for="pollen">Point de Pollen :</label>
        <input type="number" class="form-control" name="pollen" id="pollen" value="{{plante.pollen}}">
    </div>
    <div class="form-group">
        <div class="custom-control custom-checkbox">
            <input type="checkbox" class="custom-control-input" name="miellat" id="miellat" {% if plante.miellat %}checked{% endif %}>
            <label class="custom-control-label" for="miellat">Miellat</label>
        </div>
    </div>
    <div class="form-group">
        <label for="photo">Photo :</label>
        <div class="custom-file">
            <input type="file" class="custom-file-input" id="photo" name="photo">
            <label class="custom-file-label" for="photo" accept="image/png, image/jpeg">Choisir une image</label>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Modifier</button>
</form>

{% endblock %}